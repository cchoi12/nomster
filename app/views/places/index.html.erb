<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner col-xs-offset-2">
    <div class="item active">
      <li class="crop">
      <%= image_tag 'slider1.jpg' %>
      </li>
      <div class="carousel-caption">
        Delicious food across Los Angeles
      </div>
    </div>
    <div class="item">
      <li class="crop">
      <%= image_tag 'slider2.jpg' %>
      </li>
      <div class="carousel-caption">
        Montrose is bomb.
      </div>
    </div>
    <div class="item">
      <li class="crop">
      <%= image_tag 'slider3.jpg' %>
      </li>
      <div class="carousel-caption">
        The Rising Sun.
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<% @places.each do |place| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1><br />
    <i><%= place.address %></i><br />
    <p><%= place.description %></p><br />

    <% if place.user.present? %>
        <small><%= place.user.email %></small>
    <% end %>
  </div>

 <% if place.comments.present? %>
  <div class="col-xs-12 col-xs-offset-1">
    <blockquote>
      <% if place.comments.last.humanized_rating.present? %>
        <b><%= place.comments.last.humanized_rating %></b> -
      <% end %>
      <%= place.comments.last.message %>
      <small><%= place.comments.last.user.email %></small>
    </blockquote>
 <% end %>
  </div>

<% if place.photos.present? %> 
  <div class="col-xs-12 col-xs-offset-1">
    <blockquote> 
    <% if place.photos.last.picture.present? %> 
      <b><%= image_tag place.photos.last.picture, :class => 'img-default-size' %></b> 
    <% end %> 
    </blockquote>
  </div>
<% end %> 

<%= will_paginate @places, renderer: BootstrapPagination::Rails %>
<% end %>